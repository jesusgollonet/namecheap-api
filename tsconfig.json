{
  "compilerOptions": {
    // Output configuration
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,

    // Language level settings
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",

    // Type checking
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["tests", "**/*.test.ts"]
}
